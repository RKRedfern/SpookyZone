<% if @comment.story %>
<h1> Write a Comment for <%= @comment.story.title %> </h1>
<% else %>
<h1> New Comment </h1>
<% end %>

<%= form_for([@comment.story,@comment]) do |f|%>

    <% if !@comment.story %>
        <%= f.label :story %>
        <%= f.collection_select :story_id, Story.all, :id, :title %>
    <% else %>
        <%= f.hidden_field :story_id %>
    <% end %>

    <%= f.label :content %>
    <%= f.text_field :content %>


    <%= f.submit %>

<% end %>