<% if @story %>
<h1> New Comment On <%= @story.title %> </h1>
<% else %>
<h1>New Comment!</h1>
<% end %>

<%= render partial: "layouts/errors", locals: {object: @comment} %>

<%= form_for(@comment) do |f|%>

    <%= f.label :story %>
    <%= f.collection_select :story_id, Story.all, :id, :title %>


    <%= f.label :content %>
    <%= f.text_field :content %>


    <%= f.submit %>

<% end %> 
